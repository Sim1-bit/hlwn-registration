---
import '../assets/css/global.css'
import "../assets/css/base.css"
import "../assets/css/typography.css"
import "../assets/css/layout.css"
import "../assets/css/buttons.css"
import "../assets/css/effects.css"
import "../assets/css/mobile.css"

import { Font } from 'astro:assets'
import Image from "astro/components/Image.astro"

// Props
const { title, description, settings, lang = "es" } = Astro.props
const canonicalUrl = (settings.base_url ?? '/') + (lang === "es" ? "/" : `/${lang}/`)

---

<html lang={lang}>
  <head>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=MiraiRegular&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>{ title ?? settings.title }</title>
    <meta name="description" content={ description ?? settings.description } />
    <meta name="theme-color" content={ settings.theme_color } />

    <!-- Canonical & hreflang -->
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" href={settings.base_url + '/'} hreflang="es" />
    <link rel="alternate" href={settings.base_url + '/ca/'} hreflang="ca" />
    <link rel="alternate" href={settings.base_url + '/en/'} hreflang="en" />
    <link rel="alternate" href={settings.base_url + '/it/'} hreflang="it" />
    <link rel="alternate" href={settings.base_url + '/'} hreflang="x-default" />

    <link rel="icon" type="image/svg" href="https://centrovidasana.com/wp-content/uploads/2025/04/cropped-Diseno-sin-titulo-32x32.png" />
    <link rel="manifest" href="/manifest.json" />

    <Font cssVariable="--font-inter" preload />
    <Font cssVariable="--font-inter-display" preload />

  </head>

  <body id="top" class="... et_cover_background ...">

    <!-- bg image -->
    <div class="fixed inset-0 -z-10 w-full h-full">
      <Image
        src="https://centrovidasana.com/wp-content/uploads/2024/05/Fondo-Kinecuantica.png"
        alt=""
        format="png"
        height={1080}
        width={1920}
        sizes="100vw"
        class="w-full h-full object-cover"
        style="pointer-events:none"
        loading="eager"
      />
      <div
        class="absolute inset-0"
        style="
          background: radial-gradient(ellipse at top right, #ffffff 23%, #cdfcff 57%, #fde6d7 78%, #f9c3d9 100%);
          opacity: 0.95;
          pointer-events: none;
        "
      ></div>
    </div>


    <!-- Main -->
    <main id="main">
      <slot />
    </main>
  </body>
</html>
